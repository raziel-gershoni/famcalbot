# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Calendar API Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here

# AI Provider Configuration
# Choose your AI model from src/config/ai-models.ts
# Available models:
#   Claude: claude-sonnet-4.5 (default), claude-sonnet-4
#   GPT-5.1: gpt-5.1, gpt-5.1-instant
#   GPT-5: gpt-5, gpt-5-mini, gpt-5-nano
#   Gemini: gemini-3-pro, gemini-2.5-flash, gemini-2.5-flash-lite
AI_MODEL=claude-sonnet-4.5

# API Keys (provide at least one for your chosen model's provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Override max output tokens (defaults to model's maxOutputTokens)
# Claude models default to 8192 (capped for safety)
# GPT-5 models default to 16000
# AI_MAX_TOKENS=8192

# Optional: Configure retry attempts for API failures (default: 3)
# AI_MAX_RETRIES=3

# Cron Job Secret (for Vercel endpoint protection)
CRON_SECRET=your_secret_token_here

# Redis (Upstash) for distributed locking (required for /testmodels)
# Get from https://console.upstash.com/ - Free tier: 500K commands/month
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token_here

# Optional: Emergency kill switch for /testmodels command
# DISABLE_TESTMODELS=false

# Optional: Voice Messages (Google Cloud TTS - Admin only, /summary only)
# Google Cloud TTS credentials (JSON service account key as single-line string)
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Cloud Text-to-Speech API
# GOOGLE_TTS_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"..."}
#
# Voice settings (optional with sensible defaults)
# VOICE_DEFAULT=he-IL-Wavenet-B     # Voice: Wavenet-A/B/C/D (neural), Standard-A/B (basic)
# VOICE_SPEED=1.0                   # Speed: 0.25 to 4.0 (1.0 = normal)

# Environment
NODE_ENV=development
